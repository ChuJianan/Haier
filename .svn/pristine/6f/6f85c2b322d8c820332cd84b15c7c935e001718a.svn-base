<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baiyan"
    >
    <RelativeLayout 
    android:id="@+id/rela1"
    android:layout_width="fill_parent"
    android:layout_height="49dp"
    android:background="@drawable/ic_main_daohang"
    android:gravity="center_vertical">
     <Button
        android:id="@+id/left_button"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"
        android:text="返回"
        android:textColor="#bfbfbf"
        android:background="#00000000"
        android:layout_marginLeft="15.0dp"
        android:layout_marginTop="13.0dp"
         />
    <TextView
        android:id="@+id/main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/right_button"
        android:layout_toRightOf="@+id/left_button"
        android:layout_marginLeft="20.0dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="找回密码"
        android:textColor="#005aaa"
        android:textSize="17sp" />
    <Button
        android:id="@+id/right_button"
        android:layout_width="65dp"
        android:layout_height="48dp"
        android:background="#00000000"
        android:text="下一步"
        android:textSize="14sp"
         android:textColor="#005aaa"
        android:layout_alignParentRight="true"
        android:scaleType="centerInside" />
</RelativeLayout>
    <RelativeLayout 
              android:id="@+id/linear"
              android:layout_marginTop="10.0dp"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/rela1"
              android:gravity="center"
              >
    <RelativeLayout 
                  android:id="@+id/relative"
                  android:layout_width="280dp"
                  android:layout_height="30dp"
                  >
                  <TextView 
                      android:id="@+id/username"
                      android:layout_width="60dp"
                      android:layout_height="30dp"
                      android:gravity="center"
                      android:textSize="14sp"
                      android:text="用户名"/>
                  <EditText 
                      android:id="@+id/editname"
                      android:layout_toRightOf="@id/username"
                      android:layout_width="220dp"
                      android:layout_height="30dp"
                      android:background="@drawable/shapeedit"/>
              </RelativeLayout>
    <LinearLayout 
                  android:id="@+id/linearout"
                  android:layout_below="@id/relative"
                  android:layout_width="280dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="5.0dp"
                  android:orientation="vertical">
                  <TextView 
                      android:id="@+id/queation"
                      android:layout_width="wrap_content"
                      android:layout_height="30dp"
                      android:text="密保问题"
                      android:gravity="center"
                      android:textSize="14sp"/>
                   <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                >
            </Spinner>
              </LinearLayout>
              <LinearLayout 
                  android:id="@+id/linearout1"
                  android:layout_below="@id/linearout"
                  android:layout_width="280dp"
                  android:layout_height="60dp"
                  android:layout_marginTop="5.0dp"
                  android:orientation="vertical">
                  <TextView 
                      android:id="@+id/queation"
                      android:layout_width="wrap_content"
                      android:layout_height="30dp"
                      android:text="您的答案是"
                      android:gravity="center"
                      android:textSize="14sp"/>
                  <EditText 
                      android:id="@+id/editquestion"
                      android:layout_width="280dp"
                      android:layout_height="30.0dp"
                      android:textSize="14sp"
                      android:gravity="center"
                      android:background="@drawable/shapeedit"/>
              </LinearLayout>
    </RelativeLayout>

</RelativeLayout>