package com.haier.utils;public class ValidateUtils {	private static int flag = 0;	public static int ValidatePassword(String password) {		if (password == null || password.equals("")) {			flag = 1;// 密码不能为空		} else if (password.length() < 8 || password.length() > 12) {			return 2;// 密码长度为8-12位		} else {			char tmpChar;			for (int i = 0; i < password.length(); i++) {				tmpChar = password.charAt(i);				if (!isLowercases(tmpChar) && !isUppercase(tmpChar)						&& !isNum(tmpChar)) {					flag = 3;// 存在特殊字符					break;				}			}			if (flag == 0) {				flag = 4;// 正确			}		}		return flag;	}	private static boolean isLowercases(char tmpChar) {		if (Character.isLowerCase(tmpChar)) {			return true;		}		return false;	}	private static boolean isUppercase(char tmpChar) {		if (Character.isUpperCase(tmpChar)) {			return true;		}		return false;	}	private static boolean isNum(char tmpChar) {		if (Character.isDigit(tmpChar)) {			return true;		}		return false;	}}