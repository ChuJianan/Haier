<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/baiyan">
    <RelativeLayout 
    android:id="@+id/rela1"
    android:layout_width="fill_parent"
    android:layout_height="49dp"
    android:background="@drawable/ic_main_daohang"
    android:gravity="center_vertical">
     <Button
        android:id="@+id/left_button"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"
        android:text="返回"
        android:textColor="#bfbfbf"
        android:background="#00000000"
        android:layout_marginLeft="15.0dp"
        android:layout_marginTop="13.0dp"
         />
    <TextView
        android:id="@+id/main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/right_button"
        android:layout_toRightOf="@+id/left_button"
        android:layout_marginLeft="20.0dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="新密码"
        android:textColor="#005aaa"
        android:textSize="17sp" />
    <Button
        android:id="@+id/right_button"
        android:layout_width="65dp"
        android:layout_height="48dp"
        android:background="#00000000"
        android:text="提交"
        android:textSize="14sp"
         android:textColor="#005aaa"
        android:layout_alignParentRight="true"
        android:scaleType="centerInside" />
</RelativeLayout>

    <RelativeLayout 
              android:id="@+id/linear"
              android:layout_marginTop="10.0dp"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/rela1"
              android:gravity="center"
              >
<RelativeLayout 
                  android:id="@+id/relative"
                  android:layout_width="280dp"
                  android:layout_height="30dp"
                  >
                  <TextView 
                      android:id="@+id/username"
                      android:layout_width="60dp"
                      android:layout_height="30dp"
                      android:gravity="center"
                      android:textSize="14sp"
                      android:text="新密码"/>
                  <EditText 
                      android:id="@+id/pw"
                      android:layout_toRightOf="@id/username"
                      android:layout_width="220dp"
                      android:layout_height="30dp"
                      android:hint="密码长度为8-12位"
                      android:background="@drawable/shapeedit"/>
              </RelativeLayout>
              <RelativeLayout 
                  android:id="@+id/relative1"
                  android:layout_width="280dp"
                  android:layout_below="@id/relative"
                   android:layout_marginTop="10.0dp"
                  android:layout_height="30dp"
                  >
                  <TextView 
                      android:id="@+id/username"
                      android:layout_width="60dp"
                      android:layout_height="30dp"
                      android:gravity="center"
                      android:textSize="14sp"
                      android:text="确认密码"/>
                  <EditText 
                      android:id="@+id/newpw"
                      android:layout_toRightOf="@id/username"
                      android:layout_width="220dp"
                      android:layout_height="30dp"
                      android:hint="请再次输入密码"
                      android:background="@drawable/shapeedit"/>
              </RelativeLayout>
</RelativeLayout>
</RelativeLayout>
