        <Button
            android:id="@+id/bgbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/relaimage7"
            android:layout_alignRight="@+id/relaimage8"
            android:layout_below="@+id/relaimage7"
