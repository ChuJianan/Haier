<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="50.0dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        >
        <TextView 
            android:id="@+id/number"
            android:layout_width="30.0dp"
            android:layout_height="fill_parent"
            android:text="10"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginLeft="5.0dp"
            android:textColor="@color/list_item_title_color"/>
        <ImageView 
            android:id="@+id/userimage"
            android:layout_width="40.0dp"
            android:layout_height="35.0dp"
            android:layout_marginTop="5.0dp"
            android:layout_toRightOf="@id/number"
            android:layout_marginLeft="15.0dp"
            android:src="@drawable/rr"></ImageView>"
         <TextView 
            android:id="@+id/username1"
            android:layout_width="140dp"
            android:layout_height="fill_parent"
            android:text="summer"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:singleLine="true"
            android:layout_toRightOf="@id/userimage"
            android:layout_marginLeft="5.0dp"
            android:textColor="@color/list_item_title_color"/>
         <TextView 
            android:id="@+id/us"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="积分 :  "
            android:gravity="center"
            android:textSize="20sp"
             android:singleLine="true"
            android:layout_toRightOf="@id/username1"
            android:layout_marginLeft="20.0dp"
            android:textColor="@color/list_item_title_color"/>
         <TextView 
            android:id="@+id/totalScore1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="89500000"
            android:singleLine="true"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_toRightOf="@id/us"
            android:layout_marginLeft="5.0dp"
            android:textColor="@color/list_item_title_color"/>
    </RelativeLayout>
</LinearLayout>
