<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearjiemian"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:id="@+id/rela3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="6.0dp"
        android:layout_marginBottom="6.0dp" >
        <RelativeLayout 
            android:id="@+id/rela5"
             android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <RelativeLayout 
                android:id="@+id/rela9"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_alignParentTop="true">
                
            <ImageView 
                android:id="@+id/imageView1"
                android:layout_width="150.0dp"
                android:layout_height="160.0dp"
                android:layout_alignParentTop="true"
                />
            <RelativeLayout
                android:id="@+id/rela7"
                android:layout_width="110dp"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="25.0dp"
                android:gravity="center"
                android:background="@drawable/ic_game_kuang">
                <TextView 
                    android:id="@+id/text1"
                    android:layout_width="90.0dp"
                    android:layout_height="40.0dp"
                    android:text="@string/text1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="#000000"/>
            </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout 
            android:id="@+id/rela6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_marginRight="20.0dp"
            >
             <RelativeLayout 
                android:id="@+id/rela10"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_alignParentTop="true">
            <ImageView 
                android:id="@+id/imageView2"
                android:layout_width="150.0dp"
                android:layout_height="160.0dp"
                android:layout_alignParentTop="true"
                />
            <RelativeLayout
                android:id="@+id/rela8"
                android:layout_width="110dp"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20.0dp"
                android:gravity="center"
                android:background="@drawable/ic_game_kuang">
                <TextView 
                    android:id="@+id/text2"
                    android:layout_width="90.0dp"
                    android:layout_height="40.0dp"
                    android:text="@string/text2"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="#000000"/>
            </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rela4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
             android:gravity="center"
            android:layout_marginLeft="20.0dp"
           >
 <RelativeLayout 
                android:id="@+id/rela11"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_alignParentTop="true">
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="150.0dp"
                android:layout_height="160.0dp"
                android:layout_alignParentTop="true"
                />
            <RelativeLayout
                android:id="@+id/rela9"
                android:layout_width="110dp"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20.0dp"
                android:gravity="center"
                android:background="@drawable/ic_game_kuang">
                <TextView 
                    android:id="@+id/text3"
                    android:layout_width="90.0dp"
                    android:layout_height="40.0dp"
                    android:text="@string/text3"
                    android:textSize="20sp"
                        android:gravity="center"
                    android:textColor="#000000"/>
                
            </RelativeLayout>
            </RelativeLayout>
            
            
            
        </RelativeLayout>
        
    </RelativeLayout>
    
    
    

