    <LinearLayout
        android:id="@+id/about_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rela1" >

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_margin="10.0dp"
            android:background="@drawable/ic_searchfriend_edit"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="3dp" >

            <TextView
                android:id="@+id/search"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/ic_friend_search"
                android:gravity="center" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5.0dp"
                android:background="@drawable/ic_searchfriend_shugang"
                android:gravity="center" />

            <EditText
                android:id="@+id/editfrend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/transparent"
                android:singleLine="true" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/ttt"
        android:layout_width="fill_parent"
        android:layout_height="1.0dp"
        android:layout_below="@id/about_layout"
        android:layout_marginLeft="10.0dp"
        android:layout_marginRight="10.0dp"
        android:background="@drawable/line" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/ttt"
        android:layout_marginBottom="10.0dp"
        android:layout_marginLeft="10.0dp"
        android:layout_marginRight="10.0dp"
        android:layout_marginTop="10.0dp" >

        <ListView
            android:id="@+id/list"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10.0dp"
            android:layout_marginLeft="10.0dp"
            android:layout_marginRight="10.0dp"
            android:layout_marginTop="10.0dp"
            android:cacheColorHint="#00000000"
            android:divider="#0989BB"
            android:dividerHeight="1sp" >
        </ListView>
    </RelativeLayout>

</RelativeLayout>