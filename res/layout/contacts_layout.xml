<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_dise" >

    <RelativeLayout
        android:id="@+id/rela1"
        android:layout_width="fill_parent"
        android:layout_height="49dp"
        android:background="@drawable/ic_main_daohang"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/left_button"
            android:layout_width="56dp"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/right_button"
            android:background="@drawable/bg_btn_back"
            android:scaleType="fitXY"
            android:text="返回"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/right_button"
            android:layout_alignTop="@+id/right_button"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="28.0dp"
            android:layout_toLeftOf="@+id/right_button"
            android:layout_toRightOf="@+id/left_button"
            android:gravity="center"
            android:text="搜索好友"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/right_button"
            android:layout_width="65dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:textColor="#ffffff" />
